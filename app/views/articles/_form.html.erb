<%= form_for @article, html: {class: "form-horizontal"} do |f| %>
<div class="form-group <%= "has-error" unless @article.errors[:title].blank? %> label-floating">
  <%= f.label :title, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: "form-control" %>
    <p class="help-block">
      Title must more than 10 character
    </p>
  </div>
</div>
<div class="form-group <%= "has-error" unless @article.errors[:content].blank? %> label-floating">
  <%= f.label :content, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_area :content, class: "form-control" %>
    <p class="help-block">
      Article must more than 50 character
    </p>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2">
    <%= f.submit nil, class: "btn btn-raised btn-info" %>
  </div>
</div>
<% end %>
